{
    "name": "RDBL",
    "description": "Make webpages readable.",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "background": {
        "page" : "background/background.html",
        "persistent": false
    },
    "web_accessible_resources": [
        "main/*"
    ],
    "icons": {
        "16": "img/rdblx16.png",
        "32": "img/rdblx32.png",
        "48": "img/rdblx48.png",
        "128": "img/rdblx128.png"
    },
    "browser_action": {
        "default_title": "Read."
    },
    "options_page": "options/options.html"
}